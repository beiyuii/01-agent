# ===========================================
# 环境配置
# ===========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# API 配置
# ===========================================
# 百炼 API 密钥 (必填, 请替换为你自己的)
DASHSCOPE_API_KEY=your-dashscope-api-key

# 默认使用的模型
DASHSCOPE_MODEL=qwen3-max

# API 基础 URL (可选, 默认使用官方)
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# ===========================================
# 数据库配置
# ===========================================
# ChromaDB 数据持久化目录
CHROMA_PERSIST_DIRECTORY=./data/chroma

# ChromaDB 集合名称
CHROMA_COLLECTION_NAME=job_postings

# 原始数据路径
DATA_PATH=./data/raw/data_2026信息表.csv

# ===========================================
# 文件存储配置
# ===========================================
REPORTS_DIRECTORY=./data/reports
UPLOADS_DIRECTORY=./data/uploads

# ===========================================
# 服务配置
# ===========================================
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ===========================================
# 业务配置
# ===========================================
MAX_FILE_SIZE=10485760       # 10MB
MAX_RECOMMENDATIONS=10
SIMILARITY_THRESHOLD=0.6

# ===========================================
# 缓存配置
# ===========================================
ENABLE_CACHE=true
CACHE_TTL=3600

# ===========================================
# 使用说明
# ===========================================
# 1. 复制此文件为 .env: cp .env.example .env
# 2. 填入你的实际 API 密钥和配置值
# 3. 确保 .env 文件不要提交到版本控制系统
# 4. 生产环境建议设置 ENVIRONMENT=production 和 DEBUG=false
